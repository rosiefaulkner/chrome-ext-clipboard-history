{
    "manifest_version": 3,
    "name": "Clipboard Monitor",
    "version": "1.1",
    "description": "Collects copied values from all tabs and applications, and stores clipboard history persistently.",
    "permissions": [
        "clipboardRead",
        "clipboardWrite",
        "storage",
        "activeTab",
        "tabs",
        "scripting",
        "offscreen",
        "nativeMessaging"
    ],
    "host_permissions": [
        "<all_urls>"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*/*",
                "http://*/*"
            ],
            "js": [
                "content.js"
            ]
        }
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icon.png",
            "48": "icon.png",
            "128": "icon.png"
        }
    },
    "icons": {
        "16": "icon.png",
        "48": "icon.png",
        "128": "icon.png"
    }
}
